{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiGateway": {
    "Routes": {
      "user-route": {
        "ClusterId": "user-cluster",
        //TODO: Change to default: add authentication settings and take care of anonymous endpoints
        //"AuthorizationPolicy": "default",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "user/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        //TODO: Change to default: add authentication settings and take care of anonymous endpoints
        //"AuthorizationPolicy": "default",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7193/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7170/"
          }
        }
      }
    }
  }
}